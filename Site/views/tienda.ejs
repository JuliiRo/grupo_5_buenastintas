  <!-- Productos de la tienda -->

  <section class="principal">
    <div class="container">
      <div class="row">
        <% db.forEach(producto => { %>
        <div class="col-12 col-md-6 col-lg-3">
          <div class="contenido">
            <figure>
              <a href="/tienda/<%= producto.id %>">
                <img src="/images/<%= producto.image %> " alt="">
              </a>
            </figure>
            <h3><%= producto.bodega %> </h3>
            <span><%= producto.nombre %> </span>
            <article>
              $<%- (producto.price - producto.price * producto.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %>
               <% if (producto.discount !=0) { %>
                  <span class="descuento"><%= producto.discount %>% OFF</span>
                <% } %>
      </div>
      
    </div>
    <% }) %>
  </section>
  
