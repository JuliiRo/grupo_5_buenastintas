<%- include('partials/head') %> 
<%- include('partials/header') %>
<div class="container-flud">
    <div class="container">
        <section class="contenido">
            <section class="row"></section>
            <ul class="mini-barra">
            <li class="opciones"><a href="/admin/agregar">Agregar Producto</a></li>
            <li class="opciones"><a href="/admin/show/1/show">Editar - Eliminar</a></li>
            </ul>
        </section>
        <form action="/admin/agregar" method="POST" enctype="multipart/form-data">
            <section class="form">
                <div class="grupo-form">
                    <h3><label for="">Bodega:</label></h3>
                    <input type="text" name="bodega" placeholder="Escribí acá" >
                </div>
                <div class="grupo-form">
                    <h3><label for="">Nombre:</label></h3>
                    <input type="text" name="nombre" placeholder="Escribí acá" required >
                </div>
                <div class="grupo-form">
                    <h3><label for="">Varietal:</label></h3>
                    <input type="text"  name="varietal" placeholder="Escribí acá"  >
                </div>
                <div class="grupo-form">
                    <h3><label for="">Año:</label></h3>
                    <input type="number" id="barra"  name="año" placeholder="Escribí acá" >
                </div>
                <div class="grupo-form">
                    <h3><label for="">Precio:</label></h3>
                    <input type="number"  name="price" placeholder="Escribí acá" required >
                </div>
                <div class="grupo-form">
                    <h3><label for="">Descuento</label></h3>
                    <input type="number"  name="discount" placeholder="Escribí acá" >
                </div>
                <div class="grupo-form">
                    <h3><label for="">Categoria:</label></h3>
                    <select name="category" id="algo" required>
                        <option value="vino tinto">Vinos Tinto</option>
                        <option value="vino blanco">Vinos Blanco</option>
                        <option value="espumante">Espumantes</option>
                        <option value="whisky">Whiskies</option>
                        <option value="aperitivo">Aperitivos</option>
                        <option value="cerveza">Cervezas</option>
                    </select>
                </div>
                <div class="grupo-form">
                    <h3>Descripción:</h3>
                    <textarea name="description" placeholder="Escribí acá" id="" cols="30" rows="5" required></textarea>
                  </div>
                
                <div class="grupo-form">
                    <h3><label for="">Agregar imagen</label></h3>
                    <input type="file" name="image">
                </div>
                <div>
                    <button type="reset" class="btn btn-outline-secondary mr-3">Borrar</button>
                    <button type="submit" class="btn btn-outline-secondary mr-3" id="agregar">Agregar</button>
                </div>
            </section>
        </form>
        
    </div>
</div>
<%- include('partials/footer') %>