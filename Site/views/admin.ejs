<%- include('partials/head') %> 
<%- include('partials/header') %>
<div class="container-flud">
    <div class="container">
        <section class="contenido">
            <section class="row"></section>
            <ul class="mini-barra">
            <li class="opciones"><a href="/admin/agregar">Agregar Producto</a></li>
            <li class="opciones"><a href="/admin/show/1/show">Editar - Eliminar</a></li>
            </ul>
        </section>
        
        <section class="form">
            <div class="grupo-form">
                <h3><label for="">Bodega:</label></h3>
                <input type="text" placeholder="Escribí acá" required >
            </div>
            <div class="grupo-form">
                <h3><label for="">Nombre:</label></h3>
                <input type="text" placeholder="Escribí acá" required >
            </div>
            <div class="grupo-form">
                <h3><label for="">Varietal:</label></h3>
                <input type="text" placeholder="Escribí acá" required >
            </div>
            <div class="grupo-form">
                <h3><label for="">Año:</label></h3>
                <input type="date" id="barra" placeholder="Escribí acá" required>
            </div>
            <div class="grupo-form">
                <h3><label for="">Precio:</label></h3>
                <input type="number" placeholder="Escribí acá" required >
            </div>
            <div class="grupo-form">
                <h3><label for="">Descuento</label></h3>
                <input type="number" placeholder="Escribí acá" >
            </div>
            <div class="grupo-form">
                <h3><label for="">Categoria:</label></h3>
                <select name="categorias" id="algo">
                    <option value="">Vinos</option>
                    <option value="">Espumantes</option>
                    <option value="">Whiskies</option>
                    <option value="">Aperitivos</option>
                    <option value="">Cervezas</option>
                </select>
            </div>
            <div class="grupo-form">
                <h3>Descripción:</h3>
                <textarea name="" id="descripcion" cols="30" rows="5">Escribí acá</textarea>
              </div>
            
            <div class="grupo-form">
                <h3><label for="">Agregar imagen</label></h3>
                <input type="file" required>
            </div>
            <div>
                <button type="submit" id="agregar">Agregar Producto</button>
            </div>
        </section>
    </div>
</div>
<%- include('partials/footer') %>